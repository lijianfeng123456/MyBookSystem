<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.sanxiaU.dao.BookTypeDao">

<cache></cache>
<!-- 查询是否有这种类型的图书类别 -->
<select id="findOneBookType"  resultType="com.sanxiaU.entity.BookType">
select * from book_type where bt_type=#{bt_type}
</select>
<!-- 查询所有的图书类别（用pageHelper分页） -->
<select id="findBookType"  resultType="com.sanxiaU.entity.BookType">
select * from book_type
</select>
<!-- 新增图书类别 -->
<insert id="">
insert into book_type (bt_type) values(#{bt_type})
</insert>
<!-- 批量删除指定的图书 -->
<delete id="removeBookTypeList" parameterType ="java.util.List">
delete from book_type where bt_id=
<foreach collection="list" item = "bt_id" open="(" separator="," close=")">
#{bt_id}
</foreach>

</delete>
<!-- 删除一种图书类别 -->
<delete id="removeBookType" parameterType="String">
delete from book_type where bt_type=#{bt_type}
</delete>
</mapper>
